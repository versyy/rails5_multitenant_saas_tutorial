<p id="notice"><%= notice %></p>

<h1>Subscriptions</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Started At</th>
      <th>Owner</th>
      <th>Total Amount</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |sub| %>
      <tr>
        <td><%= sub.id %></td>
        <td><%= sub.started_at %></td>
        <td><%= sub.user.name %></td>
        <td><%= sub.plans.map(&:amount).inject(0, &:+) %></td>
        <td><%= sub.status %></td>
        <td><%= link_to 'Show', settings_subscriptions_path(sub) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
