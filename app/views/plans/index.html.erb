<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Stripe ID</th>
      <th>Amount</th>
      <th>Interval</th>
      <th>Active</th>
      <th>Displayable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.stripe_id %></td>
        <td><%= plan.amount %></td>
        <td><%= plan.interval %></td>
        <td><%= plan.active %></td>
        <td><%= plan.displayable %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>
